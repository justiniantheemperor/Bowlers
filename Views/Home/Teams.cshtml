        <div class="masthead-subheading">Teams</div>
    </div>
</header>

<div class="container">

<br />

<h3>Select a Team</h3>

<br />

@foreach (var t in Model)
{
    <a asp-controller="Bowlers" asp-action="Index" asp-route-bowlerTeam="@t.TeamName"
       class="btn btn-primary btn-outline-secondary">@t.TeamName</a>
}

