@{
}

@model IEnumerable<string>

    <div class="d-grid gap-2">

        <h4>Teams</h4>

        <a asp-controller="Bowlers" asp-action="Index" asp-route-bowlerTeam="">All</a>

        @foreach (string t in Model)
        {
            <a asp-controller="Bowlers" asp-action="Index" asp-route-bowlerTeam="@t"
                class="btn @(ViewBag.SelectedTeam == t ? "btn-primary": "btn-outline-secondary")">@t</a>
        }
    </div>